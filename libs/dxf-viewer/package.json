{
    "name": "dxf-viewer",
    "version": "0.5.0",
    "homepage": "https://dxf-viewer.github.io/dxf-viewer-examples/",
    "module": "dist/dxf-viewer.esm.min.js",
    "main": "dist/dxf-viewer.esm.min.js",
    "types": "dist/types/index.d.ts",
    "type": "module",
    "scripts": {
        "clean": "rimraf dist build",
        "build:release": "ts-node --esm esbuild.config.ts -mode=production",
        "build:prebuild": "ts-node --esm esbuild.config.ts -mode=prebuild",
        "build:datatype": "tsc && tsc-alias",
        "build": "npm run clean && npm run lint-fix && npm run build:datatype && npm run build:release",
        "build:dev": "npm run clean && npm run lint-fix && npm run build:prebuild",
        "demo": "npm run build:dev && node demo/index.cjs",
        "start": "ts-node --esm esbuild.config.ts -mode=development",
        "lint": "eslint src --ext ts",
        "lint-fix": "npm run lint -- --fix",
        "docs": "typedoc src/export.doc.ts --excludePrivate --excludeProtected --excludeInternal --exclude src/pathes/*"
    },
    "files": [
        "/dist"
    ],
    "repository": {
        "type": "git"
    },
    "keywords": [
        "webgl",
        "threejs",
        "three.js",
        "javascript",
        "typescript",
        "vue",
        "cad",
        "opensource",
        "pdf"
    ],
    "author": "dxf-viewer",
    "license": "UNLICENSED",
    "dependencies": {
        "@types/concaveman": "^1.1.3",
        "@types/lodash": "^4.14.165",
        "@types/resize-observer-browser": "^0.1.7",
        "2d-polygon-boolean": "^1.0.1",
        "2d-polygon-self-intersections": "^1.3.1",
        "camera-controls": "^1.37.4",
        "clipper-lib": "^6.4.2",
        "concaveman": "^1.2.1",
        "core-js": "^3.27.1",
        "i18next": "^21.6.0",
        "js-base64": "^3.7.2",
        "jsbi": "^4.3.0",
        "lodash": "^4.17.20",
        "loglevel": "^1.8.0",
        "mitt": "^3.0.0",
        "opentype.js": "^1.3.4",
        "pako": "^2.1.0",
        "poly-extrude": "^0.2.0",
        "polybooljs": "^1.2.0",
        "polygon-clipping": "^0.15.3",
        "screenfull": "^6.0.0",
        "three": "^0.167.0",
        "three-mesh-bvh": "^0.5.21"
    },
    "devDependencies": {
        "@fal-works/esbuild-plugin-global-externals": "^2.1.2",
        "@types/eslint": "^8.21.1",
        "@types/node": "^18.11.19",
        "@types/resize-observer-browser": "^0.1.7",
        "@types/three": "^0.167.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.47.1",
        "esbuild": "^0.16.17",
        "esbuild-plugin-inline-worker": "^0.1.1",
        "esbuild-plugin-sass": "^1.0.1",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "express": "^4.17.1",
        "javascript-obfuscator": "^4.0.0",
        "pdfjs-dist": "3.8.162",
        "prettier": "^2.5.1",
        "terser": "^5.16.2",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.2",
        "typedoc": "^0.25.0",
        "typescript": "^4.5.2"
    }
}
